<script type="text/javascript">
	var left = 0;
	var bottom = 320;
	document.addEventListener("keypress", function(
		event){

		console.log(event)


		if(event.keyCode == 100)
				{
			bucket.style.backgroundImage="url(bucket.png)"
			left = left+10;
			console.log(left)
			bucket.style.left = left + 'px';
		}

		if(event.keyCode == 97)
			{
		bucket.style.backgroundImage="url(bucket.png)"
			left = left-10;
			console.log(left)
			bucket.style.left = left + 'px';
		}

		if(event.keyCode == 115)
				{
		bucket.style.backgroundImage="url(bucket.png)"
			bottom = bottom+10;
			console.log(bottom)
			bucket.style.top = bottom + 'px';
		}

		if(event.keyCode == 119)
				{
		bucket.style.backgroundImage="url(bucket.png)"
			bottom = bottom-10;
			console.log(bottom)
			bucket.style.top = bottom + 'px';
		}

		
	})


</script>
